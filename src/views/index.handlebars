    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filmes e Avaliações</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>
<body class="bg-dark text-light home-page">

        {{#if error}}
            <div class="alert alert-danger text-center">{{error}}</div>
        {{/if}}
          <!-- Imagens iniciais (exibidas apenas se não houver filmes) -->
    {{#unless filmes}}


        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="img/imagens-do-filme-1536-x-1024-cctvfm1sakiwfvt4.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>PROCURE POR LANÇAMENTOS</h3>
                        <p>Fique por dentro das informações dos grandes lançamentos do ano</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="img/imagens-de-personagens-de-encanto-1600-x-900-6edl64g4kxmsxmcb.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>ENCONTRE SEUS FILMES FAVORITOS</h3>
                        <p>Só aqui no Movieflix você consegue encontrar seus filmes favoritos</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="img/imagens-do-filme-1581-x-1054-ehuthcj3ig1ha7ff.jpg" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>REDESCUBRA GRANDES PRODUÇÕES</h3>
                        <p>No MovieFlix você encontra as grandes produções que tinha esquecido</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="img/194462.webp" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>ENCONTRE BOAS MEMORIAS E ADICIONE ELAS A SUA LISTA</h3>
                        <p>Aqui você pode encontrar filmes incriveis esquecidos e torna-los seus favoritos</p>
                    </div>
                </div>
                
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    

    <div>
        
    </div>

    <div class="container" id="initialImages">
        <h2 class="text-center mb-4">Filmes em Destaque</h2>
        {{> movie-cards}}
    </div>
    
{{/unless}}

        {{#if filmes}}
            <h2 class="text-center mt-5 mb-5">Resultados da pesquisa:</h2>
            <div class="container" >
                <div class="row" >
                    {{#each filmes}}
                        <div class="col-md-3 mb-4" >
                            <div class="card">
                                <a href="/filmes/{{this.imdbID}}" class="card-img-top"> 
                                    <img src="{{this.Poster}}" class="card-img-top" alt="Capa do filme {{this.Title}}">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/filmes/{{this.imdbID}}" class="text-dark">{{this.Title}} ({{this.Year}})</a>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/if}}


   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>